<UserControl x:Class="DanceDj.WPF.Views.FilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DanceDj.WPF.Views"
             xmlns:vm="clr-namespace:DanceDj.Mvvm.ViewModel;assembly=DanceDj.Mvvm"
             d:DataContext="{d:DesignInstance vm:FilterViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Expander Header="{Binding Name}" ExpandDirection="Down">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="Difficulty:"/>
                    <TextBlock Text="{Binding Difficulty,Mode=OneWay}"/>
                </StackPanel>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
